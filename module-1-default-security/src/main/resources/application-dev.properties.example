# ==========================================
# Module 1 - Default Security Configuration
# ==========================================

# Application Name
spring.application.name=module-1-default-security

# Server Port
server.port=8081

# ==========================================
# MySQL Database Configuration
# ==========================================
spring.datasource.url=${DB_URL}
spring.datasource.username=${DB_USERNAME}
spring.datasource.password=${DB_PASSWORD}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ==========================================
# JPA / Hibernate Configuration
# ==========================================
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.open-in-view=false

# ==========================================
# Logging Configuration
# ==========================================
logging.level.root=INFO
logging.level.com.vbforge.security=DEBUG
logging.level.org.springframework.security=DEBUG
logging.level.org.springframework.web=DEBUG
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n

# ==========================================
# Spring Security Default Configuration
# No custom configuration needed
# Spring Boot will auto-configure security
# ==========================================
# Default user credentials will be generated
# Username: user
# Password: printed in console on startup

# ==========================================
# SpringDoc OpenAPI (Swagger) Configuration
# ==========================================
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.enabled=true
