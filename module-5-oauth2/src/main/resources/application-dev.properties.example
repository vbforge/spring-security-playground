# ==========================================
# Module 5 - OAuth2 Resource Server Configuration
# ==========================================

# Application Name
spring.application.name=module-5-oauth2

# Server Port
server.port=8085

# ==========================================
# MySQL Database Configuration
# ==========================================
spring.datasource.url=jdbc:mysql://localhost:3306/security_playground_db?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
spring.datasource.username=${DB_USERNAME:dev_user}
spring.datasource.password=${DB_PASSWORD:dev_password}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ==========================================
# JPA / Hibernate Configuration
# ==========================================
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.open-in-view=false

# ==========================================
# OAuth2 Resource Server Configuration
# ==========================================
# Keycloak issuer URI (update with your Keycloak URL)
# This URL is used to fetch Keycloak's public key for JWT validation
spring.security.oauth2.resourceserver.jwt.issuer-uri=http://localhost:8080/realms/spring-security-playground

# Alternative: Use JWK Set URI directly
# spring.security.oauth2.resourceserver.jwt.jwk-set-uri=http://localhost:8080/realms/spring-security-playground/protocol/openid-connect/certs

# ==========================================
# Logging Configuration
# ==========================================
logging.level.root=INFO
logging.level.com.vbforge.security=DEBUG
logging.level.org.springframework.security=DEBUG
logging.level.org.springframework.security.oauth2=DEBUG
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n

# ==========================================
# Spring Security Configuration
# OAuth2 Resource Server in OAuth2ResourceServerConfig.java
# ==========================================
# External authentication (Keycloak)
# JWT tokens issued by Keycloak
# Automatic token validation with Keycloak's public key
# Role mapping from Keycloak realm_access.roles
# Stateless (no sessions, no cookies)
# CSRF disabled (not needed)

# ==========================================
# SpringDoc OpenAPI (Swagger) Configuration
# ==========================================
springdoc.api-docs.path=/v3/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.enabled=true

# Swagger OAuth2 configuration
springdoc.swagger-ui.oauth.client-id=spring-security-playground-client
springdoc.swagger-ui.oauth.use-pkce-with-authorization-code-grant=true

# ==========================================
# Actuator Configuration
# ==========================================
management.endpoints.web.exposure.include=health,info
management.endpoint.health.show-details=always
